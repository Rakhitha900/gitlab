#include <stdio.h>

void linear_pointer_example(int *arr, int n) {
    for (int i = 0; i < n; i++) {
        printf("Element %d = %d\n", i, *(arr + i)); 
    }
}

int main() {
    int n;
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    int arr[n];


    for (int i = 0; i < n; i++) {
        printf("Enter element %d: ", i);
        scanf("%d", &arr[i]);
    }


    linear_pointer_example(arr, n);

    return 0;
}
